  "scripts": {
    "start": "npm update && npm run build && npm run watch",
    "build": "npm run clean:dist && npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "nodemon dist/",
    "test": "jest --forceExit",
    "build-dependecies": "npm run build:common",
    "build:common": "npm start --prefix common/",
    "build-ts": "tsc",
    "clean:dist": "npm run rimraf -- dist",
    "rimraf": "rimraf",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@poseidon/common": "file:///..\\common",
    "body-parser": "^1.18.2",
