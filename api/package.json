    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "lodash": "^4.17.5",
    "moment": "^2.22.1",
    "mongodb": "^3.0.7",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.11.1",
