    "@types/koa-router": "^7.0.42",
    "@types/lodash": "^4.14.144",
    "@types/lokijs": "^1.5.2",
    "@types/mocha": "^5.2.7",
    "@types/mongodb": "^3.3.6",
    "@types/node": "^12.11.1",
    "@types/ws": "^6.0.3",
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "rimraf": "^2.7.1",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-language-service": "^0.9.9",
    "typescript": "^3.6.4"
