  "scripts": {
    "start": "npm run build-dependecies && npm run build && npm run watch",
    "build": "npm run clean:dist && npm run build-ts && npm run tslint",
    "serve": "node dist/server.js",
    "watch": "nodemon",
    "test": "jest --forceExit",
    "build-dependecies": "npm run build:core-models",
    "build:core-models": "npm run build --prefix poseidon-core-models/",
    "build-ts": "tsc",
    "clean:dist": "npm run rimraf -- dist",
    "rimraf": "rimraf",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "@poseidon/core-models": "file:poseidon-core-models",
