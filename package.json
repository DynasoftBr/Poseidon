    "json-schema-fluent-builder": "^0.10.3",
    "koa": "^2.10.0",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-logger": "^3.2.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "lokijs": "^1.5.7",
    "moment": "^2.24.0",
    "mongodb": "^3.3.3",
    "reflect-metadata": "^0.1.13",
    "vm2": "^3.8.4",
