{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "declaration": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
            "@/*": [
                "src/*",
            ]
        },
        "plugins": [
            {
                "name": "tslint-language-service"
            }
        ]
    },
    "include": [
        "src/**/*"
    ]
}