{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "../",
    "lib": ["esnext"],
    "types": ["reflect-metadata"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "src/**/*",
    "poseidon-query-builder/includable-query-builder.ts",
    "poseidon-query-builder/entity-query-builder.ts",
    "poseidon-query-builder/imatch-builder.ts",
    "poseidon-query-builder/query-model.ts",
    "poseidon-query-builder/match-builder.ts"
  ]
}
